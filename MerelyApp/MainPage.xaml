<ContentPage
    x:Class="MerelyApp.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Markdown Editor">

    <Grid RowDefinitions="Auto, *, Auto" Padding="20">

        <HorizontalStackLayout Grid.Row="0" HorizontalOptions="Start" VerticalOptions="Center">
            <CheckBox
                x:Name="PreviewCheckBox"
                CheckedChanged="OnPreviewCheckChanged"
                VerticalOptions="Center" />
            <Label
                Text="Preview mode"
                VerticalOptions="Center"
                Margin="8,0,0,0" />
        </HorizontalStackLayout>

        <Editor
            x:Name="MarkdownEditor"
            Grid.Row="1"
            TextChanged="OnMarkdownTextChanged"
            FontSize="16"
            AutoSize="TextChanges"
            />

        <WebView
            x:Name="MarkdownPreview"
            Grid.Row="1"
            IsVisible="False"
            HeightRequest="900" />

        <Button
            Text="Save"
            Grid.Row="2"
            HeightRequest="45"
            HorizontalOptions="End"
            Clicked="OnSaveClicked" />

    </Grid>
</ContentPage>
