<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MerelyApp.NotesBoardPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:data="clr-namespace:MerelyApp.Data"
    Title="Notes">

    <Grid RowDefinitions="Auto,*" Padding="0">
        <!-- Header -->
        <Border Grid.Row="0" 
               StrokeShape="Rectangle" 
               Padding="20,16" 
               BackgroundColor="#F5F5F5"
               Margin="0,0,0,12">
            <Border.Shadow>
                <Shadow Brush="Black" Offset="0,2" Radius="4" Opacity="0.1" />
            </Border.Shadow>
            <Grid ColumnDefinitions="*,Auto">
                <Label Grid.Column="0"
                       Text="ðŸ“ Your Notes" 
                       FontSize="24" 
                       FontAttributes="Bold"
                       VerticalOptions="Center" 
                       TextColor="#333" />
                <Button Grid.Column="1"
                        Text="âž• New Note" 
                        Clicked="OnAddNewNoteClicked" 
                        HorizontalOptions="End"
                        BackgroundColor="#512BD4"
                        TextColor="White"
                        CornerRadius="10"
                        Padding="16,10"
                        FontSize="14"
                        FontAttributes="Bold" />
            </Grid>
        </Border>

        <!-- Notes List -->
        <CollectionView Grid.Row="1" 
                        x:Name="NotesList" 
                        SelectionMode="None"
                        Margin="16,0,16,16">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="data:Note">
                    <Border Padding="16" 
                           Margin="0,8" 
                           StrokeShape="RoundRectangle 16,16,16,16"
                           BackgroundColor="White">
                        <Border.Shadow>
                            <Shadow Brush="Black" Offset="0,2" Radius="4" Opacity="0.15" />
                        </Border.Shadow>
                        <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto" RowSpacing="8">
                            <StackLayout Grid.Column="0" Grid.RowSpan="2" Spacing="4">
                                <Label Text="{Binding Title}" 
                                       FontAttributes="Bold" 
                                       FontSize="18"
                                       TextColor="#333" />
                                <Label Text="{Binding UpdatedAt, StringFormat='ðŸ“… Updated: {0:g}'}" 
                                       FontSize="13" 
                                       TextColor="#666" />
                            </StackLayout>

                            <HorizontalStackLayout Grid.Column="1" 
                                                    Grid.Row="0"
                                                    VerticalOptions="Start" 
                                                    Spacing="6">
                                <Button Text="âœï¸" 
                                        Clicked="OnRenameNoteClicked" 
                                        BindingContext="{Binding .}"
                                        BackgroundColor="#DFD8F7"
                                        TextColor="#512BD4"
                                        CornerRadius="8"
                                        WidthRequest="44"
                                        HeightRequest="36"
                                        Padding="0"
                                        FontSize="16" />
                                <Button Text="ðŸ—‘ï¸" 
                                        Clicked="OnDeleteNoteClicked" 
                                        BindingContext="{Binding .}"
                                        BackgroundColor="#FFE0E0"
                                        TextColor="#D32F2F"
                                        CornerRadius="8"
                                        WidthRequest="44"
                                        HeightRequest="36"
                                        Padding="0"
                                        FontSize="16" />
                            </HorizontalStackLayout>

                            <Button Grid.Column="0"
                                    Grid.ColumnSpan="2"
                                    Grid.Row="2"
                                    Text="ðŸ“– Open Note" 
                                    Clicked="OnOpenNoteClicked" 
                                    BindingContext="{Binding .}"
                                    BackgroundColor="#512BD4"
                                    TextColor="White"
                                    CornerRadius="10"
                                    HeightRequest="40"
                                    Padding="0"
                                    FontSize="14"
                                    FontAttributes="Bold"
                                    Margin="0,4,0,0" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>