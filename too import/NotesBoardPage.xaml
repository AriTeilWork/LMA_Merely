<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiNotes.NotesBoardPage"
             Title="Notes Board">
    <Grid ColumnDefinitions="*,*,*" Padding="10" ColumnSpacing="12">
        <VerticalStackLayout x:Name="TodoColumn" Grid.Column="0">
            <VerticalStackLayout.GestureRecognizers>
                <DropGestureRecognizer Drop="OnColumnDrop" />
            </VerticalStackLayout.GestureRecognizers>
            <Label Text="ToDo" FontSize="20" FontAttributes="Bold" />
        </VerticalStackLayout>
        <VerticalStackLayout x:Name="DoingColumn" Grid.Column="1">
            <VerticalStackLayout.GestureRecognizers>
                <DropGestureRecognizer Drop="OnColumnDrop" />
            </VerticalStackLayout.GestureRecognizers>
            <Label Text="Doing" FontSize="20" FontAttributes="Bold" />
        </VerticalStackLayout>
        <VerticalStackLayout x:Name="DoneColumn" Grid.Column="2">
            <VerticalStackLayout.GestureRecognizers>
                <DropGestureRecognizer Drop="OnColumnDrop" />
            </VerticalStackLayout.GestureRecognizers>
            <Label Text="Done" FontSize="20" FontAttributes="Bold" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>
